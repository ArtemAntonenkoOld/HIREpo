<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="../Scripts/jquery.unobtrusive-ajax.js"></script>

<section id="wrapper">
    <div class="container">
        <div class="rectangle">
            <h2>Моніторинг курсу валют і тенденції банків.</h2>

        </div>

        <div class="left_tri"></div>
        <div class="right_tri"></div>

        <div id="content">


            @using (Ajax.BeginForm("_Chart", new AjaxOptions { UpdateTargetId = "resultschart" }))
            {
                <input type="text" name="id" placeholder="Введіть назву банку" />
                <input type="submit" value="Поиск" />
            }
            <div id="resultschart"></div>
</div>
</div>
</section>