@using ISharpConvertor.WebUI.Models
@model LoginViewModel
@{
    ViewBag.Title = "Вхід";
}

<section id="wrapper">
    <div class="container">
        <div class="rectangle">
            <h2>@ViewBag.Title</h2>

        </div>

        <div class="left_tri"></div>
        <div class="right_tri"></div>

        <div id="content">
            <div class="row">
                <div class="col-md-8">
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                            @Html.AntiForgeryToken()
                            <div id="secondary">
                                <aside class="widget">
                                    <h1>Використайте локальний запис для входу</h1> 
                                </aside>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger alert_box" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger alert_box " })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger alert_box" })
                            <div class="center">
                                <div class="form-group group_reg">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label ribbon_label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control enjoy-css" })
                                        
                                    </div>
                                </div>
                                <div class="form-group group_reg">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label ribbon_label" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control enjoy-css" })
                                        
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">


                                        <div class="checkbox group_reg">
                                            @Html.CheckBoxFor(m => m.RememberMe, new { style = "width: 50px;height: 50px; " })
                                            @Html.LabelFor(m => m.RememberMe, new { @class = "ribbon_label" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group group_reg">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Авторизуватися" class="btn btn-default enjoy-css_button" />
                                    </div>
                                </div>
                                <p class="register_link">
                                    @Html.ActionLink("Реєстрація нового користувача", "Register")
                                </p>
                                @* Включите, когда будет включено подтверждение учетной записи для функции сброса пароля
                                    <p>
                                        @Html.ActionLink("Забыли пароль?", "ForgotPassword")
                                    </p>*@
                            </div> }
                    </section>
                </div>

                <div class="col-md-4" style="text-align:center;">
                    <section id="socialLoginForm">
                        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    </section>
                </div>
            </div>
            </div>
        </div>
    </section>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
