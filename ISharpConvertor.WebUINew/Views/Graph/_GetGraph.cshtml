@model IEnumerable<ISharpConvertor.UIModels.GraphModel>


<div class="chart">
    <div class="ct-chart ct-golden-section" style="height:222px"></div>
</div>
<script src="~/Scripts/chart.js"></script>

<script>
    new Chartist.Line('.ct-chart', {
        labels: [@foreach(var item in Model){
                    <text>

                    '@item.Date', 
                 </text>
                } ],
                 
                 series: [


            [
                @foreach(var item in Model){
                <text>
                    @item.Rate,
    </text>
            }
            ]]
    }, {
        low: 0,
        showArea: false
    });

</script>
