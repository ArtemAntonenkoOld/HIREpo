<section id="wrapper">
    <div class="container">
        <div class="rectangle">
            <h2>Пошук банків</h2>

        </div>

        <div class="left_tri"></div>
        <div class="right_tri"></div>
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
        <div id="content">
            @using (Ajax.BeginForm("_GetBankByCityMathod", new AjaxOptions { UpdateTargetId = "results" }))
            {
                <input type="text" class="enjoy-css_input first" name="country" placeholder="Країна" />
                <input type="text" class="enjoy-css_input" name="city" placeholder="Місто" />
                <input type="text" class="enjoy-css_input" name="bank" placeholder="Банк" />

                <input type="submit" class="enjoy-css_button" value="Пошук" />
            }
            <div id="results"></div>
        </div>
    </div>
</section>